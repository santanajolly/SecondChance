@model ClassProject.Models.UserResponse

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>

<body>

<div class="login-form">

    <div class="panel-body">
        <form class="login-form" asp-action="SignIn" method="post">
            <div asp-validation-summary="All"></div>
            <div class="login-form">
                <label asp-for="Username">Username:</label>
                <input class="form-control" asp-for="Username"/>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input class="form-control" asp-for="Password"/>
            </div>
            <div class="text-center">
                <a class="btn btn-success" asp-action="Account"> Sign In</a> <br/><br/>
                <p class="message">
                    Not registered? <a class="btn btn-success" asp-action="Register"> Register</a><br/><br/>
                   
                </p>
            </div>
        </form>
    </div>
</div>
</body>
</html>

 